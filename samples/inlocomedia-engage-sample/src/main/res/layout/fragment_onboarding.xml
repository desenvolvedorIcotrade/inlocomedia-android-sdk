<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:gravity="center"
              android:orientation="vertical"
              android:weightSum="4"
              tools:background="@color/colorPrimary"
              tools:context="com.inlocomedia.android.engagement.sample.activities.OnboardingActivity$OnboardingCardFragment">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:elevation="10dp"
        android:orientation="vertical"
        android:background="@drawable/onboarding_card">
        <ImageView
            android:id="@+id/iv_onboarding"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:scaleType="centerInside"
            android:background="@drawable/onboarding_card_background_top"
            tools:src="@drawable/iv_cel"/>

        <TextView
            android:id="@+id/tv_onboarding"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:paddingTop="@dimen/margin_double"
            android:paddingBottom="@dimen/margin_double"
            android:gravity="center"
            android:background="@drawable/onboarding_card_background_bottom"
            tools:text="@string/onboarding_welcome"/>
    </LinearLayout>

</LinearLayout>
