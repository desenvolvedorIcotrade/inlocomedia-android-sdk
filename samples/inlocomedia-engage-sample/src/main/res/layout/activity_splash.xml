<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/linear_layout_screen"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimary"
              android:orientation="vertical"
              android:gravity="center"
              android:weightSum="3"
              android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/iv_splash_logo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/splash_logo"
        android:contentDescription="@null"/>

    <FrameLayout
        android:id="@+id/frame_layout_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:visibility="invisible">
        <LinearLayout
            android:id="@+id/linear_layout_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/bt_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dip"
                android:text="@string/use_account"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/dark_blue"
                android:textColor="@android:color/white"
                android:onClick="myAccount"/>

            <Button
                android:id="@+id/bt_no_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dip"
                android:text="@string/without_account"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@android:color/white"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="defaultAccount"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:visibility="gone">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/borderlessButtonStyle"
                android:text="@string/cancel"
                android:textColor="#FFFFFF"
                android:onClick="cancelAccountOption"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>